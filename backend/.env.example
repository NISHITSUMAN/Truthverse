# Application
APP_NAME=TruthVerse
APP_ENV=development
DEBUG=true
DEMO_MODE=false
SECRET_KEY=your-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database - Supabase
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://user:password@localhost:5432/truthverse

# Redis
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ES_INDEX_NAME=truthverse_snippets

# Search Fallback (if ES unavailable)
USE_FTS_FALLBACK=true

# External API Keys
NEWSAPI_KEY=your-newsapi-key
NEWSCATCHER_KEY=your-newscatcher-key
MEDIASTACK_KEY=your-mediastack-key
GOOGLE_FACTCHECK_KEY=your-google-factcheck-key
RELIEFWEB_KEY=
OPENFDA_KEY=
NCBI_KEY=your-ncbi-key

# Hugging Face
HF_API_KEY=your-huggingface-api-key
USE_HF_INFERENCE=false

# Models (local paths or HF model IDs)
CLAIM_DETECTOR_MODEL=microsoft/deberta-v3-small
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
NLI_MODEL=facebook/bart-large-mnli
EXPLANATION_MODEL=google/flan-t5-base

# Cache TTLs (seconds)
CACHE_TTL_NEWS=3600
CACHE_TTL_FACTCHECK=86400
CACHE_TTL_VERIFY=86400

# Rate Limits
RATE_LIMIT_PUBLIC=60
RATE_LIMIT_VERIFY=10
RATE_LIMIT_AI_CHAT=5

# Free User Limits
FREE_CHATS_PER_DAY=5
FREE_VERIFIES_PER_DAY=10

# Scoring Thresholds
SCORE_VERIFIED_MIN=70
SCORE_FAKE_MAX=40

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
